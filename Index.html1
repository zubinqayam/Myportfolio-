            const aiOutputTitle = document.getElementById('ai-output-title');
            const aiOutputContent = document.getElementById('ai-output-content');
            function getPageContext() {
                const kpis = `Total Investment: $30B+, Freezone Area: 21M+ sq m, Recurring Shutdown Workforce: 8,500+`;
                const investmentHotspots = `Green Manufacturing (50%), Energy (35%), Logistics (15%)`;
                const projectPipeline = `Infrastructure Expansion (670-hectare development), Polysilicon Facility (largest in Middle East), Iron Ore Plant (Oman's first)`;
                const strategicAdvantages = `Strategic Location (outside Strait of Hormuz), World-Class Infrastructure, Strong Investor Confidence`;
                return `SOHAR Port and Freezone Key Data:\n- Key Performance Indicators: ${kpis}\n- Recent Investment Hotspots: ${investmentHotspots}\n- Future Project Pipeline: ${projectPipeline}\n- Core Strategic Advantages: ${strategicAdvantages}`;
            }
            async function callGeminiAPI(prompt, button) {
                aiOutputContainer.style.display = 'block';
                aiOutputContent.innerHTML = '<div class="flex items-center justify-center"><i class="fas fa-spinner fa-spin mr-2"></i>Generating insights... Please wait.</div>';
                button.disabled = true;
                button.classList.add('opacity-50', 'cursor-not-allowed');
                const apiKey = "";
                const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=${apiKey}`;
                const payload = { contents: [{ parts: [{ text: prompt }] }], };
                try {
                    const response = await fetch(apiUrl, { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(payload) });
                    if (!response.ok) { const errorBody = await response.text(); throw new Error(`API error: ${response.status} ${response.statusText} - ${errorBody}`); }
                    const result = await response.json();
                    const candidate = result.candidates?.[0];
                    if (candidate && candidate.content?.parts?.[0]?.text) {
                        let text = candidate.content.parts[0].text;
                        text = text.replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>');
                        text = text.replace(/\n\s*-\s/g, '</li><li>');
                        text = text.replace(/\n\s*\*\s/g, '</li><li>');
                        text = text.replace(/\n\s*(\d+)\.\s/g, '</li><li>');
                        text = text.replace(/^(.*?)(\n)?/,'<li>$1</li>');
                        text = `<ul>${text}</ul>`.replace(/<\/li>$/, '');
                        text = text.replace(`<ul><li></li>`, '<ul>');
                        text = text.replace(/\n/g, '<br>');
                        aiOutputContent.innerHTML = text;
                    } else {
                         aiOutputContent.textContent = 'Could not generate a valid response. The API returned an unexpected structure. Please try again.';
                         console.error('Unexpected API response structure:', result);
                    }
                } catch (error) {
                    console.error('Error calling Gemini API:', error);
                    aiOutputContent.textContent = 'An error occurred while generating the content. Please check the console for details and ensure you have a valid API key if required.';
                } finally {
                    button.disabled = false;
                    button.classList.remove('opacity-50', 'cursor-not-allowed');
                }
            }
            generateSummaryBtn.addEventListener('click', () => {
                const pageContext = getPageContext();
                const prompt = `Act as a world-class business analyst for an investment firm. Generate a concise, professional executive summary based on the following data about SOHAR Port and Freezone in Oman. The summary should be suitable for a busy executive and highlight the key investment figures, strategic projects, and primary advantages. Format it with a clear heading and short, impactful paragraphs.\n\nDATA:\n${pageContext}`;
                aiOutputTitle.textContent = "Generated Executive Summary";
                callGeminiAPI(prompt, generateSummaryBtn);
            });
            generateStrategyBtn.addEventListener('click', () => {
                const pageContext = getPageContext();
                const prompt = `Act as a senior business strategist for a consultancy. Create a high-level, bulleted go-to-market strategy outline for a new company providing specialized industrial services (e.g., advanced safety solutions, predictive maintenance, logistics tech) looking to enter the SOHAR Port and Freezone market. Use the provided data to inform the strategy, focusing on target sectors, initial value proposition, and key partnership opportunities. Format the output with clear headings for each section of the strategy and use bullet points.\n\nDATA:\n${pageContext}`;
                aiOutputTitle.textContent = "Draft Go-to-Market Strategy";
                callGeminiAPI(prompt, generateStrategyBtn);
            });
        });
